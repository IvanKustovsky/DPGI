<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">

    <DockPanel LastChildFill="True">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
        <DockPanel LastChildFill="True">
            <TextBox HorizontalAlignment="Left" Width="300">TextBox</TextBox>
            <Button HorizontalAlignment="Center" Width="100" Height="30" Margin="50,100,0,0">Button</Button>
            <TextBox HorizontalAlignment="Right" Width="300">TextBox</TextBox>
        </DockPanel>
    </DockPanel>


</Window>
